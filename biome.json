{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist", "!src/components/ui"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "off",
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"recommended": true,
				"noLabelWithoutControl": "off"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off",
				"recommended": true
			}
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
